<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/idplusqr">

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/idCard"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/border_style"
    android:layout_margin="15dp"
    android:layout_marginBottom="50dp"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cliptringle"
        android:text="@string/a_y_2023_24"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="2dp">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/vapmlogo" />

        <ImageView
        android:src="@android:drawable/divider_horizontal_dark"
        android:background="@color/black"
        android:layout_width="3dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="@string/shri_vishweshwar_shikshan_prasarak_mandal_s"
                android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:baselineAligned="false"
            android:ellipsize="none"
            android:fontFamily="@font/breeserif"
            android:textStyle="bold"
            android:freezesText="false"

            android:hapticFeedbackEnabled="true"
            android:text="@string/vishweshwaryya_abhiyantriki_padvika_mahavidyalaya"
            android:textAlignment="center"
            android:textColor="#F703FF"
            android:textDirection="firstStrongRtl"
           />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/almala_tq_ausa_dist_latur"
                android:textColor="#000000"
                android:textSize="10sp"/>
        </LinearLayout>
        <ImageView
            android:src="@android:drawable/divider_horizontal_dark"
            android:background="@color/black"
            android:layout_width="3dp"
            android:layout_height="85dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/divider" />
        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="QR code" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/tiangle1"
            android:gravity="start"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="fitCenter"
            android:src="@drawable/omiii"
            android:padding="1dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/iv_style"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/tiangle2" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewFullName"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:freezesText="false"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:hapticFeedbackEnabled="true"
        android:text=""
        android:textAlignment="center"
        android:textColor="#F703FF"
        android:textDirection="firstStrongRtl"
        />

    <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"

        android:text=""
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEnrollmentNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:gravity="center"

        android:text=""
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:gravity="center"

        android:text=""
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/tiangle1"
            android:gravity="bottom|start"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="95dp"
            android:src="@drawable/sign"
            />
            <TextView
                android:id="@+id/textVie"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:freezesText="false"
                android:textSize="15sp"

                android:hapticFeedbackEnabled="true"
                android:text="PRINCIPAL"
                android:textAlignment="center"
                android:textColor="#F703FF"
                android:textDirection="firstStrongRtl"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/tiangle2"
            android:gravity="bottom|end"/>
    </LinearLayout>


</LinearLayout>

        <Button
            android:id="@+id/btnSaveImage"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:text="Save Above ID Card"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Note* : Your ID card will be stored in 'Downloads' Folder of your internal storage, \nYou can Print It Later :)"
            />

        <Button
            android:id="@+id/gotostdlogin"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:textSize="25sp"
            android:text="Go to Login"

            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>